{
    "name": "ptlis/vcs",
    "description": "Tools for working with version control systems.",
    "license": "MIT",
    "keywords": [ "vcs", "version control", "version" ],
    "type": "library",
    "authors": [
        {
            "name": "brian ridley",
            "email":"ptlis@ptlis.net"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ptlis/diff-parser": "~0.2",
        "ptlis/shell-command": "~0.4"
    },
    "require-dev": {
        "pdepend/pdepend": "~1.1",
        "phploc/phploc": "~2.0",
        "phpmd/phpmd": "@dev",
        "phpunit/phpunit": "~4.0",
        "sebastian/phpcpd": "~2.0",
        "squizlabs/php_codesniffer": "~1.5"
    },
    "autoload": {
        "psr-4": {
            "ptlis\\Vcs\\": "src/",
            "ptlis\\Vcs\\Test\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
